from math import comb

def probability_king_and_non_king():
    # Összes lehetséges két kártya választása
    total_outcomes = comb(52, 2)
    
    # Kedvező esetek: 1 király és 1 nem király
    favorable_outcomes = comb(4, 1) * comb(48, 1)
    
    # Valószínűség kiszámítása
    probability = favorable_outcomes / total_outcomes
    return probability

# Eredmény kiírása
print(f"Valószínűség, hogy az egyik kártya király, a másik nem király: {probability_king_and_non_king():.4f}")
